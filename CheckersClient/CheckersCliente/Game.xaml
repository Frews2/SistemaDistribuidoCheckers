<Window x:Class="CheckersCliente.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckersCliente"
        xmlns:p="clr-namespace:CheckersCliente.Properties"
        mc:Ignorable="d"
        Title="Game" Height="450" Width="800">
    <Grid Background="Beige">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="550"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label Content="{x:Static p:Resources.User}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ListBox x:Name="listUsersLoggedIn" x:FieldModifier="public" HorizontalAlignment="Left" Height="150" VerticalAlignment="Top" Width="200"/>
        </StackPanel>
        <StackPanel>
            <ListView x:Name="messages" Background="DarkSalmon" HorizontalAlignment="Right" HorizontalContentAlignment="Left">
            </ListView>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Label Content="{x:Static p:Resources.Message}" Margin="10"/>
            <TextBox Width="200" Margin="10" Name="message"/>
            <Button Content="{x:Static p:Resources.Send}" Margin="10" Width="50" Click="SendMessage"/>
        </StackPanel>
    </Grid>
</Window>

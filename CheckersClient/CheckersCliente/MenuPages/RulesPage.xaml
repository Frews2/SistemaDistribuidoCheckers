<Page x:Class="CheckersCliente.MenuPages.RulesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:p="clr-namespace:CheckersCliente.Properties"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CheckersCliente.MenuPages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="RulesPage">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/Images/checkersBackground.jpg"/>
        </Grid.Background>

        <TextBlock Text="{x:Static p:Resources.Rules}" Margin="10,8,0,0" VerticalAlignment="Top" Height="63" FontWeight="Bold" FontSize="36" Foreground="White" FontFamily="Bookman Old Style" TextAlignment="Center"/>
        <TextBlock Text="{x:Static p:Resources.GameRules}" Margin="50,60,30,80" VerticalAlignment="Top" Height="644" FontWeight="Black"  FontSize="11" Foreground="White" FontFamily="Bookman Old Style" TextAlignment="Center" Background="Black"/>

        <Button x:Name="CancelButton" Content="{x:Static p:Resources.Cancel}" Margin="300,500,250,0" VerticalAlignment="Top" Background="White" BorderBrush="#FF050404" Foreground="Black"  FontWeight="Bold" Height="54" FontSize="18" FontStyle="Italic" Click="CancelClick"/>


    </Grid>
</Page>

<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckersCliente.Windows"
        xmlns:Properties="clr-namespace:CheckersCliente.Properties" x:Class="CheckersCliente.Windows.ReportWindow"
        mc:Ignorable="d"
        Title="ReportWindow" Height="250" Width="250" Closing="WindowClose">
    <Grid Background="Red">

        <Button x:Name="reportButton" Content="{x:Static Properties:Resources.Report}" HorizontalAlignment="Left" Margin="10,153,0,0" VerticalAlignment="Top" Width="223" Click="ReportPlayer" IsEnabled="False"/>
        <Button x:Name="cancelButton" Content="{x:Static Properties:Resources.Cancel}" HorizontalAlignment="Left" Margin="10,191,0,0" VerticalAlignment="Top" Width="223" Click="CloseWindow"/>

        <TextBox x:Name="reportText" HorizontalAlignment="Left" Height="86" Margin="28,41,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="188" MaxLength="100" TextChanged="EnableReportButton"/>

        <TextBlock Text="{x:Static Properties:Resources.ExplainReport}" Margin="0,19,-0.4,0" VerticalAlignment="Top" Height="17" FontWeight="Bold" FontSize="12" Foreground="White" FontFamily="Bookman Old Style" TextAlignment="Center"/>
       
    </Grid>
</Window>
